!!!
%html{:lang => "hu"}
  %head
    %meta{:charset => "utf-8"}/
    %title= current_page.data.title || data.site.title
    %meta{:name => "description", :content => "#{data.site.description}"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}/
    %link{:rel => "shortcut icon", :href => "/favicon.ico"}/

    /[if lte IE 8]
      = javascript_include_tag 'html5shiv'

    = stylesheet_link_tag :main

    /[if lte IE 9]
      = stylesheet_link_tag 'ie9'
    /[if lte IE 8]
      = stylesheet_link_tag 'ie8'
  %body
    / Wrapper
    #wrapper

      / Header
      %header#header
        .inner
          / Logo
          %a.logo{:href => "/"}
            %span.title= data.site.logotitle
          / Nav
          %nav
            %ul
              %li
                %a{:href => "#menu"} Menu

      / Menu
      %nav#menu
        %h4
          %a{:href => "#{data.site.url}"}= data.site.urltext
        %ul
          %li
            %a{:href => "/"} Kezdőlap
          %li
            %a{:href => "/kapcsolat"} Kapcsolat
          - sitemap.resources.select{|page| page.data.tags && page.data.tags.include?('page')}.sort_by{|n| n.data.sort_weight || 100}.each do |page|
            %li
              %a{:href => "#{page.url}"}= page.data.title

      / Main
      #main
        .inner
          = yield

      / Footer
      %footer#footer
        .inner.row

          - unless (defined? current_page.data.footer_hide_contacts) && current_page.data.footer_hide_contacts
            %section.6u
              %h2{:style => "text-decoration: underline;"} Kapcsolat
              = partial "contact"

            //%section.6u
            //  %p TODO map

          %ul.copyright.12u
            %li
              = "© #{data.site.logotitle} - Minden jog fenntartva."
            %li
              Design:
              %a{:href => "http://html5up.net"} HTML5 UP

    = javascript_include_tag 'jquery.min.js'
    = javascript_include_tag 'skel.min.js'
    = javascript_include_tag 'util.js'
    = javascript_include_tag 'jquery.magnific-popup.min.js'
    :javascript
      $('.image-link').magnificPopup({
      type: 'image',
      removalDelay: 500,
      mainClass: 'mfp-fade'
      });
    /[if lte IE 8]
      = javascript_include_tag 'respond.min.js'
    = javascript_include_tag 'main'
