%section.cards.row
  - products.each_with_index do |item, idx|
    %div{:class => "12u(small) 6u(large) 4u"}
      %article.card.mag-image{"data-mfp-src" => "#{item.image}"}
        .card-image{:style => "background-image: url(#{item.image_small});"}
        .card-header
        .card-copy
          %p= item.description
